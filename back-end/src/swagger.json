{
  "openapi": "3.0.0",
  "info": {
    "title": "+A Educação - API",
    "description": "API to integrate with +A Educação system",
    "version": "1.0.0",
    "contact": {
      "email": "riegerproducoes@gmail.com"
    }
  },
  "paths": {
    "/students": {
      "get": {
        "tags": ["Students"],
        "summary": "Get all students",
        "description": "Get all students in db",
        "operationId": "getStudents",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "ra": {
                      "type": "string"
                    },
                    "cpf": {
                      "type": "string"
                    }
                  },
                  "example": [
                    {
                      "name": "John Doe",
                      "email": "john@doe.com",
                      "ra": "123456",
                      "cpf": "12345678901"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Something went wrong"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Students"],
        "summary": "Create a new student",
        "description": "Create a new student in db. All fields must be filled like the example. CPF must have 11 digits and RA must have 6 digits",
        "operationId": "createStudent",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "ra": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john@doe.com",
                  "ra": "123456",
                  "cpf": "12345678901"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "ra": {
                      "type": "string"
                    },
                    "cpf": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "name": "John Doe",
                    "email": "john@doe.com",
                    "ra": "123456",
                    "cpf": "12345678901"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Invalid data"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Student already exists"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
